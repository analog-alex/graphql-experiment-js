{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "es2020"
        ],
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true, 
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}